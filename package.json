{
  "name": "project-management",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tasktrek-io/TaskTrek.git"
  },
  "bugs": {
    "url": "https://github.com/tasktrek-io/TaskTrek/issues"
  },
  "homepage": "https://github.com/tasktrek-io/TaskTrek#readme",
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace api\" \"npm run dev --workspace web\"",
    "build": "npm run build --workspace api && npm run build --workspace web",
    "start": "concurrently \"npm run start --workspace api\" \"npm run start --workspace web\"",
    "lint": "npm run lint --workspace api && npm run lint --workspace web",
    "lint:fix": "npm run lint:fix --workspace api && npm run lint:fix --workspace web",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check --workspace api && npm run type-check --workspace web",
    "pre-commit": "npm run format:check && npm run lint && npm run type-check && npm run build",
    "prepare": "is-ci || husky install",
    "docker:setup": "chmod +x scripts/setup-docker.sh && scripts/setup-docker.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down && docker system prune -a -f",
    "deploy": "chmod +x scripts/deploy.sh && scripts/deploy.sh",
    "health-check": "chmod +x scripts/health-check.sh && scripts/health-check.sh"
  },
  "devDependencies": {
    "@types/node": "^20.15.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "is-ci": "^4.1.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
